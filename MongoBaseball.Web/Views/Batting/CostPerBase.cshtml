@model IEnumerable<MongoBaseball.Web.Models.SimpleCostPerBase>

@{
    ViewBag.Title = "CostPerBase";
}

<h2>Cost Per Base</h2>

<form method="post" action="/batting/costperbase">
    <label for="year">Year: </label>
    <input name="id" id="id" type="text" />
    <button type="submit">Go!</button>
</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead><tr><td>Year</td><td>Name</td><td>Total Bases</td><td>Salary</td><td>Cost Per Base</td></tr></thead>
        @foreach (var batter in Model)
        {
            <tr><td>@batter.Year</td><td>@batter.Name</td><td>@batter.TotalBases</td><td>@batter.Salary</td><td>@batter.CostPerBase</td></tr>
        }
    </table>
}