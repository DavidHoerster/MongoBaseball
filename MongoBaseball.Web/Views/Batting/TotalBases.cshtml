@model IEnumerable<MongoBaseball.SimpleTotalBases>

@{
    ViewBag.Title = "TotalBases";
}

<h2>Total Bases</h2>

<form method="post" action="/batting/totalbases">
    <label for="year">Year: </label>
    <input name="id" id="id" type="text" />
    <button type="submit">Go!</button>
</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead><tr><td>Year</td><td>Name</td><td>Total Bases</td></tr></thead>
        @foreach (var batter in Model)
        {
            <tr><td>@batter.Year</td><td>@batter.Name</td><td>@batter.TotalBases</td></tr>
        }
    </table>
}