@model IEnumerable<MongoBaseball.Web.Models.SimpleWRAA>

@{
    ViewBag.Title = "wRAA";
}

<h2>Weighted Runs Above Average</h2>

<form method="post" action="/batting/wraa">
    <label for="year">Year: </label>
    <input name="id" id="id" type="text" />
    <button type="submit">Go!</button>
</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead><tr><td>Year</td><td>Name</td><td>wOBA</td><td>wRAA</td></tr></thead>
        @foreach (var batter in Model)
        {
            <tr><td>@batter.Year</td><td>@batter.Name</td><td>@Math.Round(batter.WOBA, 3)</td><td>@Math.Round(batter.WRAA, 3)</td></tr>
        }
    </table>
}