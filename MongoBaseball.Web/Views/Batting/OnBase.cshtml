@model IEnumerable<MongoBaseball.SimpleObp>

@{
    ViewBag.Title = "On Base";
}

<h2>On Base Percentage</h2>

<form method="post" action="/batting/onbase">
    <label for="year">Year: </label>
    <input name="id" id="id" type="text" />
    <button type="submit">Go!</button>
</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead><tr><td>Year</td><td>Name</td><td>On Base Percentage</td></tr></thead>
        @foreach (var batter in Model)
        {
            <tr><td>@batter.Year</td><td>@batter.Name</td><td>@Math.Round(batter.OBP, 3)</td></tr>
        }
    </table>
}